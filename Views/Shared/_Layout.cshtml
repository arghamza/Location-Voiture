<!DOCTYPE html>
<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="./paiement.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @Scripts.Render("~/bundles/modernizr")
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Views/Shared/acceuil.css" runat="server" />
</head>
<body class="bg-dark" runat="server">
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow p-3 mb-5  rounded">

            <a href="/"><img src=@Url.Content("/images/car.png") height="80" width="80" alt="img" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (@Session["Email"] != null && @Session["Email"].ToString() == "admin@gmail.com")
                    {

                        <li class="nav-link">
                            @Html.ActionLink("Home ", "Voitures", "Admin", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Categories ", "Categories", "Admin", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Modeles", "Modeles", "Admin", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Locations", "Locations", "Admin", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Logout ", "Logout", "UserLogin", null, new { @class = "nav-link" })
                        </li>

                    }
                    else if (@Session["Email"] == null)
                    {

                        <li class="nav-link">
                            @Html.ActionLink("Home ", "Acceuil", "Client", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Register", "Index", "User", null, new { @class = "nav-link" })
                        </li>


                    }
                    else
                    {

                        <li class="nav-link">
                            @Html.ActionLink("Home ", "Acceuil", "Client", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-link">
                            @Html.ActionLink("Locations", "Locations", "Client", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-link">
                            contact us
                        </li>
                        <li class="nav-link">
                            About 
                        </li>
                        <li style="color:antiquewhite ;position : absolute ; right :10px ;font-size:120%" class="nav-item dropdown">

                            <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Welcome @Session["Email"].ToString() !
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

                                <li>@Html.ActionLink("Profil ", "profil", "Client", null, new { @class = "dropdown-item" })</li>
                               
                                <li>
                                   
                                        @Html.ActionLink("Logout ", "Logout", "UserLogin", null, new { @class = "dropdown-item" })
                                     </li>
                            </ul>
                        </li>


                    }
                </ul>
                <form class="form-inline my-2 my-lg-0" style="position : absolute ; right :35% ;" >
                    <input class="form-control mr-sm-2" type="search" placeholder="Mercedes..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0"  style="position : absolute ; right :-45% ;top :0 ;"type="submit">Search</button>
                </form>

            </div>
        </nav>
    </div>

    <div class="container body-content "  style="color:antiquewhite"  >
        @RenderBody()
        <hr />
    
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/css")
    @RenderSection("scripts", required: false)
</body>

</html>
